{
  "name": "node-sql-boilerplate",
  "version": "1.0.0",
  "main": "server.js",
  "author": "",
  "license": "ISC",
  "description": "A template repository boilerplate for building RESTful APIs using Node.js, Express.js, and Sequelize and Sequelize-cli, With branches for additional features",
  "engines": {
    "node": ">=18.17.1"
  },
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll --detectOpenHandles",
    "start": "cross-env NODE_ENV=production node server.js ",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "format": "prettier --check  --ignore-unknown .",
    "format:fix": "prettier --write  --ignore-unknown .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*/**": "prettier --write  --ignore-unknown "
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.5",
    "sequelize": "^6.35.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.3"
  },
  "_moduleAliases": {
    "@root": ".",
    "@config": "./config",
    "@controllers": "./controllers",
    "@middleware": "./middleware",
    "@models": "./models",
    "@repositories": "./repositories",
    "@routes": "./routes",
    "@services": "./services",
    "@tests": "./tests",
    "@util": "./util",
    "@validations": "./validations"
  }
}
